{
  "manifest_version": 3,
  "name": "SnowFlakes",
  "version": "1.3.1",
  "description": "Add snowflakes effect to any page for the New Year mood!",
  "permissions": ["storage"],
  "icons": {
    "128": "assets/logo.png"
  },
  "content_scripts": [{
    "js": ["scripts/snowflakes.js", "scripts/content.js"],
    "matches": ["<all_urls>"]
  }],
  "web_accessible_resources": [{
    "resources": ["*.png"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "pages/popup.html"
  }
}
